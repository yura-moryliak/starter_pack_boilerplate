{
  "trailingComma": "all",
  "singleQuote": true,
  "endOfLine": "crlf",
  "printWidth": 120,
  "tabWidth": 2,
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "printWidth": 100
      }
    },
    {
      "files": "*.md",
      "options": {
        "proseWrap": "never"
      }
    }
  ]
}
